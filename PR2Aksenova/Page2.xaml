<Page x:Class="PR2Aksenova.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR2Aksenova"
      mc:Ignorable="d" 
      d:DesignHeight="475" d:DesignWidth="800"
      Title="Page2" Height="475">

    <Grid Background="White">
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="ShowWindow" Content="Список" Width="79" Margin="5,5,5,410" Click="ShowWindow_Click"/>
            <Button x:Name="AddRemove" Content="Добавить/Удалить" Width="114" Margin="5,5,5,410" Click="AddRemove_Click"/>
        </StackPanel>
        <Frame x:Name="ShowFrame" Margin="0,0,0,-21" Height="500"/>
        <ListBox x:Name="ListText" HorizontalAlignment="Left" Height="219" Margin="35,99,0,0" VerticalAlignment="Top" Width="509" RenderTransformOrigin="0.222,0.448"/>
        <Button x:Name="BackBtn" Content="Назад" HorizontalAlignment="Left" Height="42" Margin="570,187,0,0" VerticalAlignment="Top" Width="60" Click="BackBtn_Click"/>
        <Button x:Name="NextBtn" Content="Вперед" HorizontalAlignment="Left" Height="42" Margin="650,187,0,0" VerticalAlignment="Top" Width="60" Click="NextBtn_Click" RenderTransformOrigin="0.633,-0.375"/>
    </Grid>
</Page>
